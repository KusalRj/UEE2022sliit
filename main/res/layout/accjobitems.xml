<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#2AFFFFFF"
    app:cardCornerRadius="5dp"
    android:layout_margin="12dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/accTitle_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/accPostdate_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="15dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/accName_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="0dp" />
            <TextView
                android:id="@+id/accDescription_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="0dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/accPossition_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="0dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/accAccdate_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="0dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/accPhno_rv_itm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="0dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>